<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/login_background"
    tools:context="com.example.arslan.qrcode.RegisterActivity"
   >

    <EditText
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Nome"
        android:background="#FFCC11"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:maxLength="16"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/etName"
        android:layout_alignEnd="@+id/etName"
        android:layout_marginTop="26dp"
        android:id="@+id/etUsername"
        android:hint="Username"
        android:background="#FFCC11"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:maxLength="10"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPassword"
        android:hint="Password"
        android:background="#FFCC11"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:maxLength="20"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/rule"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="25dp"
        android:id="@+id/etConfPassword"
        android:hint="Conferma Password"
        android:background="#FFCC11"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:maxLength="20"
        android:layout_below="@+id/etPassword"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Seleziona ruolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rule"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_below="@+id/etUsername"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinnerRule"
        android:popupBackground="@drawable/login_background"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#FFCC11"
        android:padding="10dp"
        android:paddingLeft="5dp"
        android:textAlignment="center"
        android:layout_marginStart="19dp"
        android:layout_above="@+id/etPassword"
        android:layout_toEndOf="@+id/rule"></Spinner>

    <Button
        android:background="@android:color/white"
        android:text="Registrati"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:id="@+id/bRegister"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/etConfPassword"
        android:layout_alignParentStart="true" />
</RelativeLayout>
