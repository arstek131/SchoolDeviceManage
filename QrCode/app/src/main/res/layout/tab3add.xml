<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/login_background"
    android:layout_weight="1"
    tools:context="com.example.arslan.qrcode.Main$PlaceholderFragment">


    <EditText
        android:maxLength="9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/NumInventario"
        android:hint="Numero Inventario*"
        android:background="#FFCC11"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:maxLength="30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType= "text"
        android:ems="10"
        android:id="@+id/NomeCespite"
        android:hint="Nome Cespite*"
        android:background="#FFCC11"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:layout_below="@+id/NumInventario"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/Descrizione"
        android:hint="Descrizione"
        android:background="#FFCC11"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:layout_below="@+id/NumAula"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />


    <EditText
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/Foto"
        android:hint="Foto"
        android:background="#FFCC11"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:maxLength="16"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/btnSend"
        android:layout_alignParentStart="true" />


    <Button
        android:background="@android:color/white"
        android:text="Invia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:id="@+id/btnSend"
        android:layout_below="@+id/Descrizione"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp" />

    <TextView
        android:id="@+id/Category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Categoria*"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/NomeCespite"
        android:layout_alignParentStart="true" />



    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:paddingLeft="5dp"
        android:textAlignment="center"
        android:popupBackground="@drawable/login_background"
        android:background="#FFCC11"
        android:layout_alignBottom="@+id/Category"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/Category">
    </Spinner>

    <EditText
        android:maxLength="3"
        android:id="@+id/NumAula"
        android:textAlignment="center"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="#FFCC11"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:ems="10"
        android:inputType="number"
        android:padding="10dp"
        android:text="Aula"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinnerRoom"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="1dp"
        android:popupBackground="@drawable/login_background"
        android:background="#FFCC11"
        android:layout_alignBottom="@+id/NumAula"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/Category"></Spinner>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:textColor="@android:color/white"
        android:text="AULA*"
        android:textSize="20sp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/Category"
        android:layout_alignEnd="@+id/NumAula" />


</RelativeLayout>
